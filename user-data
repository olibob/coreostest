#cloud-config

coreos:
  etcd:
    discovery: https://discovery.etcd.io/4d26b725122c779b93d015023930ab21
    addr: $private_ipv4:4001
    peer-addr: $private_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: format-ebs-drive.service
      command: start
      content: |
        [Unit]
        Description=Format EBS docker data drive
        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStart=/usr/sbin/wipefs -f /dev/xvdc
        ExecStart=/usr/sbin/mkfs.btrfs -f /dev/xvdc
    - name: var-lib-docker.mount
      command: start
      content: |
        [Unit]
        Description=Mount EBS drive to /var/lib/docker
        Requires=format-ebs-drive.service
        After=format-ebs-drive.service
        Before=docker.service
        [Mount]
        What=/dev/xvdc
        Where=/var/lib/docker
        Type=btrfs